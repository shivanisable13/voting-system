Maven-build

Desktop folder-    java-ci-project

java-ci-project

 ├── pom.xml

 └── src

     └── main

         └── java

             └── Hello.java

Hello.java

public class Hello {

    public static void main(String[] args) {

        System.out.println("Build Successful");

    }

}

 

pom.xml

<project xmlns="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>
 
    <groupId>com.example</groupId>
    <artifactId>java-ci</artifactId>
    <version>1.0</version>
 
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
 
 

Repository name: java-ci-project

 

git init

git add .

git commit -m "Initial Java project"

git branch -M main

git remote add origin https://github.com/USERNAME/java-ci-project.git

git push -u origin main

 

.github

 └── workflows

     └── maven-build.yml

 

maven-build.yml

name: Java Maven Build

 

on:

  push:

    branches:

      - main

 

jobs:

  build:

    runs-on: ubuntu-latest

 

    steps:

    - name: Checkout Code

      uses: actions/checkout@v4

 

    - name: Set up JDK

      uses: actions/setup-java@v4

      with:

        java-version: '8'

        distribution: 'temurin'

 

    - name: Build with Maven

      run: mvn clean package

 

git add .github/workflows/maven-build.yml

git commit -m "Add GitHub Actions Maven build"

git push
